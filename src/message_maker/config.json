{
  "service_name": "Message Maker Service",
  "version": "1.0.0",
  "debug_mode": false,
  "log_level": "INFO",
  "generation": {
    "max_response_length": 500,
    "min_response_length": 5,
    "default_tone": "casual",
    "default_message_type": "response",
    "enable_user_patterns": true,
    "pattern_analysis_threshold": 10
  },
  "validation": {
    "enable_profanity_filter": true,
    "enable_spell_check": true,
    "enable_grammar_check": true,
    "enable_tone_analysis": true,
    "max_warning_threshold": 3,
    "auto_fix_typos": false
  },
  "templates": {
    "template_directory": "templates",
    "auto_load_templates": true,
    "enable_custom_templates": true,
    "template_cache_size": 100
  }
}